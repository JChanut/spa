@model Qoveo.Impact.Models.LoginModel

<section id="team-login" class="login">
    @using (Html.BeginForm("JsonTeamLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "teamLoginForm", @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <h2 class="form-signin-heading">Please sign in</h2>
            @Html.LabelFor(m => m.UserName)

            @Html.DropDownListFor(m => m.UserName, new SelectList(ViewBag.TeamList as IEnumerable<SelectListItem>, "text", "value"), new { @class = "input-block-level" })

            @Html.ValidationMessageFor(m => m.UserName)
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "input-block-level" })
            @Html.ValidationMessageFor(m => m.Password)
            <label class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </label>
            <button class="btn btn-large btn-primary" type="submit">Log in</button>
            @Html.ValidationSummary()
            <a class="btn btn-link" onclick="switchLogin('admin')">Admin or tutor, click here to login</a>
        </fieldset>
    }
    
</section>
